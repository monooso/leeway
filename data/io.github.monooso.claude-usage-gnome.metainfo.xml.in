<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>@APP_ID@</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>AGPL-3.0-or-later</project_license>
  <name>Claude Usage</name>
  <summary>Track Claude Code usage and rate limits</summary>
  <description>
    <p>
      Monitor your Claude Code session and weekly usage in real time.
      Colour-coded indicators show whether you are within safe limits
      or approaching a rate-limit reset.
    </p>
    <p>
      Requires a Claude Pro or Max subscription with Claude Code.
      Not compatible with API key billing.
    </p>
  </description>
  <launchable type="desktop-id">@APP_ID@.desktop</launchable>
  <developer id="io.github.monooso">
    <name>Stephen Lewis</name>
  </developer>
  <url type="homepage">https://github.com/monooso/claude-usage-gnome</url>
  <url type="bugtracker">https://github.com/monooso/claude-usage-gnome/issues</url>
  <url type="vcs-browser">https://github.com/monooso/claude-usage-gnome</url>
  <screenshots>
    <screenshot type="default">
      <caption>Dashboard showing session and weekly usage</caption>
      <image>https://raw.githubusercontent.com/monooso/claude-usage-gnome/main/docs/claude-usage-screenshot.png</image>
    </screenshot>
  </screenshots>
  <branding>
    <color type="primary" scheme_preference="light">#c8a247</color>
    <color type="primary" scheme_preference="dark">#1a1a2e</color>
  </branding>
  <content_rating type="oars-1.1" />
  <releases>
    <release version="0.1.0" date="2026-02-20">
      <description><p>Initial release.</p></description>
    </release>
  </releases>
</component>
